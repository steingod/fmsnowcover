SHELL = /bin/sh

srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
incdir = @includedir@
libdir = @libdir@

CFLAGS = @CFLAGS@ @DEFS@ -I./

CPPFLAGS = @CPPFLAGS@

LDFLAGS = @LDFLAGS@

LIBS = @LIBS@

HEADER_FILES1 = \
  fmsnowcover.h \
  getnwp.h
SRC_FILES1 = \
  fmsnowcover.c \
  pix_proc.c \
  probest.c \
  normalpdf.c \
  getnwp.c \
  gammapdf.c \
  store_mitiff_product.c

HEADER_FILES2 = \
  fmaccusnow.h 
SRC_FILES2 = \
  fmaccusnow.c \
  store_snow.c \
  fmaccusnowfuncs.c 

AUTOMATED_FILES = \
  Makefile

.SUFFIXES:
.SUFFIXES: .c .o

.PHONY: clean install distclean

BINFILE1 = fmsnowcover

BINFILE2 = fmaccusnow

OBJ_FILES1 := $(SRC_FILES1:.c=.o)

OBJ_FILES2 := $(SRC_FILES2:.c=.o)

all: $(BINFILE1) $(BINFILE2)  

$(BINFILE1): $(OBJ_FILES1) 
	$(CC) $(CFLAGS) -o $(BINFILE1) $^ $(LDFLAGS) $(LIBS)

$(BINFILE2): $(OBJ_FILES2) 
	$(CC) $(CFLAGS) -o $(BINFILE2) $^ $(LDFLAGS) $(LIBS)

$(OBJ_FILES1): $(HEADER_FILES1)

$(OBJ_FILES2): $(HEADER_FILES2)

clean:
	find $(srcdir) -name "*.o" -exec rm -f {} \;
	find $(srcdir) -name "*.a" -exec rm -f {} \;

distclean:
	$(MAKE) clean
	rm -rf $(AUTOMATED_FILES)
	rm -rf $(BINFILE1) $(BINFILE2)

install:
	install -d $(incdir)
	install --mode=644 $(HEADER_FILES1) $(HEADER_FILES2) $(incdir)
	install -d $(bindir)
	install --mode=755 $(BINFILE1) $(BINFILE2) $(bindir)
